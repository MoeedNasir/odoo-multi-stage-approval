<odoo>
    <data noupdate="1">

        <!-- Module Category -->
        <record id="module_category_multi_stage_approval" model="ir.module.category">
            <field name="name">Multi-Stage Approval</field>
            <field name="sequence">10</field>
        </record>

        <!-- Security Groups -->
        <record id="group_multi_stage_approval_user" model="res.groups">
            <field name="name">Approval User</field>
            <field name="category_id" ref="module_category_multi_stage_approval"/>
        </record>

        <record id="group_multi_stage_approval_manager" model="res.groups">
            <field name="name">Approval Manager</field>
            <field name="category_id" ref="module_category_multi_stage_approval"/>
            <field name="implied_ids" eval="[(4, ref('group_multi_stage_approval_user'))]"/>
        </record>

        <!-- Record Rules for Multi-company -->
        <record id="approval_flow_company_rule" model="ir.rule">
            <field name="name">Approval Flow: Multi-Company Rule</field>
            <field name="model_id" ref="model_approval_flow"/>
            <field name="domain_force">['|', ('company_id','=',False), ('company_id','in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_multi_company'))]"/>
        </record>

    </data>
</odoo>
