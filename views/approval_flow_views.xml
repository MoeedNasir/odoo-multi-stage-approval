<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Approval Flow Tree View -->
        <record id="view_approval_flow_tree" model="ir.ui.view">
            <field name="name">approval.flow.tree</field>
            <field name="model">approval.flow</field>
            <field name="arch" type="xml">
                <list string="Approval Flows" default_order="sequence">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="model"/>
                    <field name="active" invisible="1"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>

        <!-- Approval Flow Form View -->
        <record id="view_approval_flow_form" model="ir.ui.view">
            <field name="name">approval.flow.form</field>
            <field name="model">approval.flow</field>
            <field name="arch" type="xml">
                <form string="Approval Flow">
                    <header>
                        <button name="toggle_active" type="object"
                                class="oe_highlight"
                                invisible="active"
                                string="Activate"/>
                        <button name="toggle_active" type="object"
                                invisible="not active"
                                string="Archive"/>
                        <field name="active" widget="boolean_button"
                               options='{"terminology": "archive"}'/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" placeholder="e.g., High Value Purchase Approval"/>
                                <field name="model" required="1"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Approval Stages">
                                <field name="stage_ids" context="{'default_approval_flow_id': id}">
                                    <list string="Approval Stages" editable="bottom" default_order="sequence">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="role_id" options="{'no_create': True, 'no_create_edit': True}"/>
                                        <field name="minimum_amount"/>
                                        <field name="maximum_amount"/>
                                        <field name="is_final_approval"/>
                                        <field name="approval_type"/>
                                        <field name="auto_approve"/>
                                    </list>

                                    <form>
                                        <group>
                                            <group>
                                                <field name="sequence"/>
                                                <field name="name"/>
                                                <field name="role_id" options="{'no_create': True, 'no_create_edit': True}"/>
                                                <field name="approval_type"/>
                                            </group>
                                            <group>
                                                <field name="minimum_amount"/>
                                                <field name="maximum_amount"/>
                                                <field name="is_final_approval"/>
                                                <field name="auto_approve"/>
                                            </group>
                                        </group>
                                        <group string="Description">
                                            <field name="approval_flow_id" invisible="1"/>
                                        </group>
                                    </form>
                                </field>
                            </page>

                            <page string="Description">
                                <field name="name" placeholder="Flow description..." nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Approval Flow Search View -->
        <record id="view_approval_flow_search" model="ir.ui.view">
            <field name="name">approval.flow.search</field>
            <field name="model">approval.flow</field>
            <field name="arch" type="xml">
                <search string="Search Approval Flows">
                    <field name="name"/>
                    <field name="model"/>
                    <filter string="Active" name="active" domain="[('active','=',True)]"/>
                    <filter string="Archived" name="archived" domain="[('active','=',False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Model" name="group_by_model" context="{'group_by': 'model'}"/>
                        <filter string="Company" name="group_by_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>