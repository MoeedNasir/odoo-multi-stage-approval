<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Purchase Approval Dashboard Kanban -->
        <record id="view_purchase_approval_kanban" model="ir.ui.view">
            <field name="name">purchase.approval.kanban</field>
            <field name="model">purchase.order</field>
            <field name="arch" type="xml">
                <kanban default_group_by="approval_stage_id" class="o_kanban_mobile">
                    <field name="approval_stage_id"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="amount_total"/>
                    <field name="approval_status"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click" t-attf-class="oe_kanban_global_click {{ 'oe_kanban_color_' + (record.color.raw_value or '0') }}">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_title">
                                        <field name="name"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <field name="partner_id"/>
                                    </div>
                                    <div>
                                        Amount: <field name="amount_total" widget="monetary" options="{'display_currency': record.currency_id.raw_value}"/>
                                    </div>
                                    <div t-if="record.approval_status.raw_value == 'waiting'">
                                        <button name="action_approve" type="object"
                                                class="btn btn-success btn-sm o_kanban_approve">Approve</button>
                                        <button name="action_reject" type="object"
                                                class="btn btn-danger btn-sm o_kanban_reject">Reject</button>
                                    </div>
                                    <div t-elif="record.approval_status.raw_value == 'approved'" class="text-success">
                                        ✓ Approved
                                    </div>
                                    <div t-elif="record.approval_status.raw_value == 'rejected'" class="text-danger">
                                        ✗ Rejected
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Sales Approval Dashboard Kanban -->
